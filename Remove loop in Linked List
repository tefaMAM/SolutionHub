class Solution {
    // Function to remove a loop in the linked list.
    public static void removeLoop(Node head) {
        Node fast=head;
        int id=0;
        Map<Node,Integer>hash=new HashMap<>();
        while (fast!=null) 
        {
            if(hash.containsKey(fast.next))
            {
                fast.next=null;
                break;
            }
            hash.put(fast,++id);
            fast=fast.next;
        }
    }
}
