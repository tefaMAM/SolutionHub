/*
// Definition for a Node.
class Node {
    public int val;
    public Node prev;
    public Node next;
    public Node child;
};
*/

class Solution {
    public Node flatten(Node head) {
        if(head==null){return null;}
       Node cur=head;
       while (cur!=null) {
        
        if(cur.child!=null){
            Node nextNode=cur.next;
            Node childHead=cur.child;
            Node tailChild=cur.child;
            while (tailChild.next!=null){
                tailChild=tailChild.next;
            }
            cur.next=childHead;
            childHead.prev=cur;
            if(nextNode!=null){
                tailChild.next=nextNode;
                nextNode.prev=tailChild;
            }
            cur.child=null;
        }
        cur=cur.next;
        }

        return head;
    }
}
